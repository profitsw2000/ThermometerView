<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sensors_temperature_rv_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sensor_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/sensor_letter_text_view"
        app:layout_constraintBottom_toBottomOf="@+id/sensor_letter_text_view"
        app:layout_constraintStart_toStartOf="parent"
        android:text="#3A67589F5678AAB8"
        android:textColor="@color/white_aluminium"/>

    <TextView
        android:id="@+id/sensor_letter_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Ð£"
        android:textSize="24sp"
        android:textColor="@color/dark_red"/>

    <TextView
        android:id="@+id/sensor_temperature_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/sensor_letter_text_view"
        app:layout_constraintStart_toStartOf="parent"
        android:text="9.8 C"
        android:textSize="24sp"
        android:textColor="@color/dark_red"/>

    <View
        android:id="@+id/time_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white_aluminium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sensor_temperature_text_view" />



</androidx.constraintlayout.widget.ConstraintLayout>